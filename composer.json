{
    "name": "php-coord/php-coord",
    "description": "PHPCoord is a set of PHP functions for handling various co-ordinate systems and converting between them",
    "keywords": ["coord","geo", "latitude", "longitude", "grid ref", "map", "wgs84", "osgb36", "utm", "nad", "nzmg", "gda", "ed50", "epsg"],
    "type": "library",
    "homepage": "https://github.com/dvdoug/PHPCoord",
    "authors": [
        {
            "name": "Doug Wright",
            "role": "Developer"
        }
    ],
    "license": "(MIT and proprietary)",
    "require": {
        "php": "^7.4||^8.0",
        "symfony/polyfill-php80": "^1.18"
    },
    "require-dev": {
        "ext-sqlite3": "*",
        "friendsofphp/php-cs-fixer": "^2.18.0",
        "phpunit/phpunit": "^9.5.0",
        "nikic/php-parser": "^4.10"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "bin-compat" : "full",
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "PHPCoord\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPCoord\\": "tests/"
        }
    }
}
